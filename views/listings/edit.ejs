<% layout('/layouts/boilerplate') -%>
<body>
  <div class="containe row justify-content-center col-8 m-auto">
    <h2 class="text-center" style="font-weight: 600; color: #222222">
      Edit Your Listing
    </h2>
    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT">
      <div class="mb-2">
        <label for="title" class="form-lable fw-semibold">Title</label>
        <input
          name="listing[title]"
          value="<%=listing.title%>"
          placeholder="Enter a Catchy title"
          type="text"
          id="title"
          class="form-control"
        />
      </div class="mb-2">
      <label for="description" class="form-lable fw-semibold"
        >Description</label
      >
      <textarea
        name="listing[description]"
        placeholder="Enter  description"
        type="text"
        class="form-control"
        id="description"
      ><%=listing.description%></textarea>
      <div class="mb-2">
        <label for="image" class="form-lable fw-semibold">Image</label>
        <input
          name="listing[image]"
          value="<%=listing.image%>"
          type="text"
          id="image"
          class="form-control"
        />
      </div>
      <div class="row mb-2">
        <div class="col-md-4">
          <label for="price" class="form-lable fw-semibold">Price</label>
          <input
            name="listing[price]"
            value="<%=listing.price%>"
            type="number"
            id="price"
            class="form-control"
          />
        </div>
        <div class="col-md-8">
          <label for="location" class="form-lable fw-semibold">Location</label>
          <input
            name="listing[location]"
            value="<%=listing.location%>"
            type="text"
            class="form-control"
            id="location"
          />
        </div>
      </div>
      <div class="mb-2">
        <label for="country" class="form-lable fw-semibold">Country</label>
        <input
          name="listing[country]"
          value="<%=listing.country%>"
          type="text"
          class="form-control"
          id="country"
        />
      </div>
      <button type="submit" class="btn edit btn-danger  mb-2">Edit</button>
      <br/>
    </form>
  </div>
</body>